<Window x:Class="BankTokenClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Client" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="MessageTextBox" HorizontalAlignment="Left" Margin="50,50,0,0" VerticalAlignment="Top" Width="300"/>
        <Button Content="Send Message" HorizontalAlignment="Left" Margin="360,50,0,0" VerticalAlignment="Top" Width="100" Click="SendMessage_Click"/>
        <TextBox x:Name="LogBox" HorizontalAlignment="Left" Height="150" Margin="50,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" IsReadOnly="True"/>
    </Grid>
</Window>