<Window x:Class="EducationClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Education Client" Height="251" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Course Title" FontWeight="Bold" />
            <ComboBox x:Name="cboTitles" Width="380" />
            <Label Content="Course Type" FontWeight="Bold" />
            <ComboBox x:Name="cboTypes" />
            <Label Content="Number of Students" FontWeight="Bold"/>
            <TextBox x:Name="studentsQty" Text="0" FontWeight="Bold"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Order" Click="Order_Click" FontWeight="Bold"/>
                <Button Content="Cancel" Click="Cancel_Click" FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
